#!/usr/bin/env bash

old_name=$1;
new_name=$2;

# Rename directories and files
find ./app/* ./test/* ./config/* ./lib/*  -name "*$old_name*" -exec bash -c "mv $0 ${0/$old_name/$new_name}" {} \;

grep -rl $old_name ./app/* ./test/* ./lib/* ./config/* ./db/seeds.rb | xargs sed -i '' "s/$old_name/$new_name/g"
